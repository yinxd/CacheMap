<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<AbsoluteLayout xmlns:app="http://schemas.android.com/apk/res/cndcsoft.android.map"
		android:orientation="vertical" android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	
		<cndcsoft.android.map.MapView android:id="@+id/mapview01"
			android:layout_width="wrap_content" android:layout_height="wrap_content" />
		<TextView android:id="@+id/mapinfo" 
			android:layout_x="10px"
			android:layout_y="10px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#FF00FF"
			android:text="地图信息" />
		<ImageButton android:id="@+id/zoomin"
			android:layout_x="10px"
			android:layout_y="220px"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/zoominbutton" />
		<ImageButton android:id="@+id/zoomout"
			android:layout_x="80px"
			android:layout_y="220px"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/zoomoutbutton" />
		<ImageButton android:id="@+id/location"
			android:layout_x="170px"
			android:layout_y="220px"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:src="@drawable/zoominbutton" />
	</AbsoluteLayout>
</LinearLayout>
